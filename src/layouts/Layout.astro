---
export interface Props { title: string };

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Photo-Fake | {title}</title>
	</head>

	<body>
		<main>
			<a href="/" class="home">
				<h1><span class="text-gradient">Astro-Photo</span></h1>
			</a>
		</main>
		<slot />
	</body>
</html>

<style is:global>
	:root {
		--accent: 124, 58, 237;
		--accent-gradient: linear-gradient(60deg, rgb(var(--accent)), #ff5100 1%, #343434 20%);
	}

	* {
		box-sizing: border-box;
		padding: 0;
		margin: 0;
	}

	html {
		font-family: inter, system-ui, sans-serif;
		background-color: #9FB4C7;
	}

	main {
		padding: 1.2rem;
	}

	.count {
		font-size: 1rem;
		font-weight: 500;
		line-height: 2rem;
		margin: 2rem 0;
	}

	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}

	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
		gap: 1rem;
		padding: 0;
	}

	.photo-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
		gap: 1rem;
		padding: 0;
		background-color: transparent;
		align-items: center;
	}

	ul {
    list-style: none;
    padding: 0;
  }

	a {
		text-decoration: none;
	}

	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1.4;
		text-align: center;
	}

	h2 {
		font-size: 2.8rem;
		font-weight: 800;
		margin: 0;
		line-height: 1.4;
	}

	h3 {
		font-size: 1.6rem;
		font-weight: 500;
		margin: 0;
		line-height: 1.6;
	}
</style>
